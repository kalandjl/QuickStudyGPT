{
    "compilerOptions": {
       "lib": [
          "es6"
       ],
       "target": "ESNext",
       "moduleResolution": "NodeNext",
       "outDir": "dist",
       "emitDecoratorMetadata": true,
       "esModuleInterop": true,
       "experimentalDecorators": true,
       "sourceMap": true,
         "rootDir": "./src", 
         "module": "NodeNext"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
 }